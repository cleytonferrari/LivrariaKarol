@model Karol.Dominio.Livro

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Livro</legend>

        @Html.HiddenFor(model => model.LivroId)

        <div class="editor-label">
            @Html.LabelFor(model => model.Nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nome)
            @Html.ValidationMessageFor(model => model.Nome)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DataDaPublicacao)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DataDaPublicacao)
            @Html.ValidationMessageFor(model => model.DataDaPublicacao)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Prefacio)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Prefacio)
            @Html.ValidationMessageFor(model => model.Prefacio)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AutorId)
        </div>
        <div class="editor-field">
            @Html.DropDownList("AutorId",(SelectList)ViewBag.ListaDeAutores)
            @Html.ValidationMessageFor(model => model.AutorId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Editora)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Editora)
            @Html.ValidationMessageFor(model => model.Editora)
        </div>

        <p>
            <input type="submit" value="Salvar" />
             @Html.ActionLink("Cancelar", "Index")
        </p>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
