@model IEnumerable<Karol.Dominio.Autor>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Autores</h2>

<p>
    @Html.ActionLink("Cadastrar novo Autor", "Cadastrar")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.AutorId }) |
            @Html.ActionLink("Detalhes", "Detalhes", new { id=item.AutorId }) |
            @Html.ActionLink("Excluir", "Excluir", new { id=item.AutorId })
        </td>
    </tr>
}

</table>
